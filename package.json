{
  "name": "studiorack-app",
  "version": "0.0.35",
  "productName": "StudioRack App",
  "description": "Audio plugin app, searchable list of plugins to install and share",
  "main": "main/index.js",
  "scripts": {
    "clean": "rimraf dist main renderer/out renderer/.next",
    "dev": "npm run build && electron .",
    "dev:static": "serve ./renderer/out",
    "start": "electron .",
    "build-renderer": "next build renderer",
    "build-electron": "tsc -p electron-src",
    "build": "npm run build-renderer && npm run build-electron",
    "format": "prettier --write \"electron-src/**/*.{ts,tsx}\" \"renderer/pages/**/*.{ts,tsx}\"",
    "lint": "tslint -p electron-src/tsconfig.json",
    "pack-app": "npm run build && electron-builder --dir",
    "pack": "electron-builder --help",
    "test": "echo 'No tests were run'",
    "dist": "npm run build && electron-builder --publish never",
    "type-check": "tsc"
  },
  "build": {
    "appId": "io.github.studiorack",
    "productName": "StudioRack App",
    "artifactName": "studiorack-${os}.${ext}",
    "asar": true,
    "asarUnpack": [
      "node_modules"
    ],
    "files": [
      "main",
      "renderer"
    ],
    "directories": {
      "buildResources": "renderer/public/icons"
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.utilities"
    },
    "linux": {
      "target": "AppImage",
      "category": "Utility"
    },
    "win": {
      "target": "nsis"
    }
  },
  "author": "kmturley",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^17.0.21",
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.11",
    "electron": "^17.1.0",
    "electron-builder": "^23.0.3",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "serve": "^13.0.2",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "@studiorack/core": "^1.1.54",
    "electron-is-dev": "^2.0.0",
    "electron-next": "^3.1.5",
    "fix-path": "^3.0.0",
    "gray-matter": "^4.0.3",
    "next": "^12.0.4",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remark": "^14.0.1",
    "remark-html": "^15.0.0"
  }
}
