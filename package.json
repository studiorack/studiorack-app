{
  "name": "studiorack-app",
  "version": "0.0.20",
  "productName": "StudioRack",
  "description": "Audio plugin app, searchable list of plugins to install and share",
  "main": "main/index.js",
  "scripts": {
    "clean": "rimraf dist main renderer/out renderer/.next",
    "dev": "npm run build && electron .",
    "start": "electron .",
    "build-renderer": "next build renderer",
    "build-electron": "tsc -p electron-src",
    "build": "npm run build-renderer && npm run build-electron",
    "format": "prettier --write \"electron-src/**/*.{ts,tsx}\" \"renderer/pages/**/*.{ts,tsx}\"",
    "lint": "tslint -p electron-src/tsconfig.json",
    "pack-app": "npm run build && electron-builder --dir",
    "test": "echo 'No tests were run'",
    "dist": "npm run build && electron-builder --publish never",
    "type-check": "tsc"
  },
  "build": {
    "artifactName": "app-${os}.${ext}",
    "asar": true,
    "files": [
      "main",
      "renderer"
    ],
    "directories": {
      "buildResources": "renderer/out/icons"
    },
    "linux": {
      "executableName": "StudioRack",
      "artifactName": "app-${os}.${ext}"
    }
  },
  "author": "kmturley",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^16.11.7",
    "@types/react": "^17.0.34",
    "@types/react-dom": "^17.0.11",
    "electron": "^15.3.1",
    "electron-builder": "^22.13.1",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "@studiorack/core": "^1.1.19",
    "electron-is-dev": "^2.0.0",
    "electron-next": "^3.1.5",
    "electron-store": "^8.0.1",
    "gray-matter": "^4.0.3",
    "next": "^12.0.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remark": "^14.0.1",
    "remark-html": "^15.0.0",
    "slugify": "^1.6.2"
  }
}
