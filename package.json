{
  "name": "studiorack-app",
  "version": "2.0.0",
  "productName": "StudioRack App",
  "description": "Audio plugin app, searchable list of plugins to install and share",
  "type": "module",
  "main": "build/index.js",
  "scripts": {
    "dev": "npm run build && electron .",
    "dev:next": "next dev ./renderer",
    "dev:static": "serve ./build",
    "start": "electron .",
    "build-renderer": "next build ./renderer",
    "build-electron": "tsc -p tsconfig.json",
    "build": "npm run build-renderer && npm run build-electron && npm run copy",
    "check": "npm run format && npm run lint && npm run build",
    "copy": "cp -rf ./electron-src/*.mjs ./build",
    "format": "prettier . --write",
    "lint": "eslint .",
    "pack-app": "npm run build && electron-builder --dir",
    "pack": "electron-builder --help",
    "test": "vitest run ./tests",
    "dist": "npm run build && electron-builder --publish never",
    "type-check": "tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/studiorack/studiorack-app.git"
  },
  "keywords": [
    "audio",
    "plugin",
    "app",
    "vst",
    "daw",
    "metadata",
    "search"
  ],
  "build": {
    "appId": "io.github.studiorack",
    "productName": "StudioRack App",
    "artifactName": "studiorack-${os}.${ext}",
    "asar": true,
    "asarUnpack": [
      "node_modules"
    ],
    "files": [
      "build",
      "renderer"
    ],
    "directories": {
      "buildResources": "renderer/public/icons"
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.utilities"
    },
    "linux": {
      "target": "AppImage",
      "category": "Utility"
    },
    "win": {
      "target": "nsis"
    }
  },
  "author": "kmturley",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/studiorack/studiorack-app/issues"
  },
  "homepage": "https://github.com/studiorack/studiorack-app#readme",
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@eslint/js": "^9.12.0",
    "@testing-library/react": "^16.0.0",
    "@types/node": "20.14.8",
    "@types/react": "18.3.3",
    "@vitejs/plugin-react": "^4.3.4",
    "electron": "^31.2.1",
    "electron-builder": "^24.13.3",
    "eslint": "^9.12.0",
    "globals": "^15.2.0",
    "jsdom": "^24.1.0",
    "prettier": "^3.2.5",
    "serve": "^14.2.3",
    "tsx": "^4.19.3",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.9.0",
    "vitest": "^3.0.9"
  },
  "dependencies": {
    "@open-audio-stack/core": "^0.1.27",
    "electron-is-dev": "^2.0.0",
    "electron-next": "^3.1.5",
    "fix-path": "^4.0.0",
    "gray-matter": "^4.0.3",
    "next": "^14.2.10",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "remark": "^15.0.1",
    "remark-html": "^16.0.1",
    "slugify": "^1.6.6"
  },
  "overrides": {
    "path-to-regexp": "^8.1.0"
  }
}
